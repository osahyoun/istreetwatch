<div class='row section'>
  <div class="col s12">

    <h2>Timeline</h2>

    <div class='row'>
      <div class="col s12 m10 offset-m1">
        <%= render "layouts/search", path: timeline_reports_path, admin: false %>
      </div>
    </div>

    <p class='right-align'><strong><%= @reports.total %> reports found</strong></p>

    <%= will_paginate @reports, class: 'center' %>

    <ul class="collapsible timeline" data-collapsible="expandable">
      <%- @reports.each_with_index do |report, i| %>
        <% if i == 0 %>
          <%= render partial: 'reports/timeline_item', locals: {report: report, is_active: true} %>
        <% else %>
          <%= render partial: 'reports/timeline_item', locals: {report: report, is_active: false} %>
        <% end %>
      <%- end %>
    </ul>

    <%= will_paginate @reports, class: 'center' %>

  </div>
</div>