<footer class="page-footer">
  <div class="container">
    <div class='row'>
      <div class="col s4">
        <ul>
          <li><%= link_to_unless_current "Home", root_path %></li>
          <li><%= link_to_unless_current "Timeline", timeline_reports_path %></li>
          <li><%= link_to_unless_current "About", about_path %></li>
        </ul>
      </div>

      <div class="col s4">
        <ul>
          <li class='truncate'><%= link_to_unless_current "Pledge", new_pledge_path %></li>
          <li class='truncate'><%= link_to_unless_current "Report Incident", new_report_path %></li>
          <li class='truncate'><%= link_to_unless_current "Finding Help", finding_help_path %></li>
        </ul>
