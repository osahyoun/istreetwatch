<header>
  <nav class='top-nav'>
    <div class='container'>
      <div class='nav-wrapper'>
        <a href="#" data-activates='nav-mobile' class="button-collapse top-nav full hide-on-large-only">
          <i class="material-icons">menu</i>
        </a>

        <ul class='right'>
          <li>
            <% disabled = current_page?(new_report_path) ? 'disabled' : '' %>
            <%= link_to "Report Incident", new_report_path, class: "report btn #{disabled}" %>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <ul id='nav-mobile' class='side-nav fixed'>
    <li class='logo hide-on-med-and-down'>
      <%= link_to root_path do %>
        <%= image_tag('logo.png', alt: "Report racism and xenophobia") %>
      <% end %>
    </li>
    <li class='icon'>
      <% klass = current_page?(root_path) ? 'current hide-on-large-only' : 'hide-on-large-only' %>
      <%= link_to root_path, class: klass do %>
        <i class="material-icons right">home</i>Home
      <% end %>
    </li>
    <li class='pledge-ad hide-on-med-and-down'>
      <p>
        <%= pluralize(Pledge.counter, 'person') %> have pledged to help end street harassment.
        <%= link_to_unless_current "Will you?", new_pledge_path %>
      </p>
    </li>
    <li class='icon'>
      <% klass = current_page?(new_pledge_path) ? 'current' : '' %>
      <%= link_to new_pledge_path, class: klass do %>
        <i class="material-icons right">person_add</i>Pledge
      <% end %>
    </li>
    <li>
    <li class='icon'>
      <% klass = current_page?(timeline_reports_path) ? 'current' : '' %>
      <%= link_to timeline_reports_path, class: klass do %>
        <i class="material-icons right">timeline</i>Timeline
      <% end %>
    </li>
    <li class='icon'>
      <% klass = current_page?(about_path) ? 'current' : '' %>
      <%= link_to about_path, class: klass do %>
        <i class="material-icons right">info_outline</i>About
      <% end %>
    </li>
    <li class='icon'>
      <% klass = current_page?(new_report_path) ? 'current hide-on-large-only' : 'hide-on-large-only' %>
      <%= link_to new_report_path, class: klass do %>
        <i class="material-icons right">report_problem</i>Report Incident
      <% end %>
    </li>
  </ul>
</header>