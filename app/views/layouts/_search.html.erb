<div class="search <%= 'public' unless admin %>">
  <%= form_tag path, method: :get do %>
    <div class="input-field">
      <%= text_field_tag :q,  params[:q], placeholder: 'search reports', class: 'big' %>

      <div class='btn-wrapper'>
        <% if admin %>
          <%= link_to '#', class: 'btn filters' do %>
            <i class="material-icons">arrow_drop_down</i>
          <% end %>
        <% end %>
        <button class='btn' type='submit'>
          <i class='material-icons'>search</i>
        </button>
      </div>

      <% if admin %>
        <div class='row filter-opts'>
          <div class="input-field col s12 m6">
            <%= text_field_tag :from, '', class: 'datepicker', placeholder: 'dd/mm/yyyy' %>
            <%= label :from, 'from', for: :from %>
          </div>
          <div class="input-field col s12 m6">
            <%= text_field_tag :to, Date.today.strftime("%-d/%m/%Y"), class: 'datepicker', placeholder: 'dd/mm/yyyy' %>
            <%= label :to, 'to', for: :to %>
          </div>
        </div>
      <% end %>
    </div>
  <%- end %>
</div>