<div class='row'>
  <%= form_tag admin_dashboard_path, method: :get do %>
    <%
      from_date = params[:from] ? DateTime.parse( params[:from] ) : Chart.default_from_date
      to_date = params[:to] ? DateTime.parse( params[:to] ) : Chart.default_to_date
    %>

    <div class="input-field col s4 m3">
      <%= text_field_tag :from, from_date.strftime("%-d/%m/%Y"), data: { value: params[:from] }, class: 'datepicker' %>
      <%= label :from, 'from', for: :from %>
    </div>

    <div class="input-field col s4 m3">
      <%= text_field_tag :to, to_date.strftime("%-d/%m/%Y"), data: { value: params[:to] } , class: 'datepicker' %>
      <%= label :to, 'to', for: :to %>
    </div>

    <div class="input-field col s4">
      <button class='btn' type='submit'>go</button>
    </div>

  <%- end %>
</div>
